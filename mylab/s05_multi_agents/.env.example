# Environment template for Multi-Agent Orchestration

# ==================================================
# Azure AI Foundry Configuration
# ==================================================
# Required: Azure AI Foundry project endpoint
PROJECT_ENDPOINT=https://your-project-name.services.ai.azure.com/api/projects/your-project-id

# Required: AI model deployment name  
MODEL_DEPLOYMENT_NAME=gpt-4o

# ==================================================
# Azure Subscription and Resource Group
# ==================================================
# Required for Logic Apps and other Azure services
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group-name

# ==================================================
# Hotel Search Agent Configuration (s01)
# ==================================================
# Azure AI Search settings
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your-search-api-key
AZURE_SEARCH_INDEX=vector-search-quickstart

# ==================================================
# Logic App Agent Configuration (s02)  
# ==================================================
# Logic App settings
LOGIC_APP_NAME=your-logic-app-name
TRIGGER_NAME=When_a_HTTP_request_is_received
RECIPIENT_EMAIL=recipient@company.com

# ==================================================
# Microsoft Fabric Agent Configuration (s03)
# ==================================================
# Fabric lakehouse settings (if different from project endpoint)
FABRIC_WORKSPACE_ID=your-fabric-workspace-id
FABRIC_LAKEHOUSE_ID=your-fabric-lakehouse-id

# ==================================================
# Azure Databricks Agent Configuration (s04)  
# ==================================================
# Databricks workspace settings
FOUNDRY_DATABRICKS_CONNECTION_NAME=your-databricks-connection-name
DATABRICKS_WORKSPACE_URL=https://your-workspace.azuredatabricks.net

# ==================================================
# Orchestration Configuration
# ==================================================
# Maximum concurrent agent executions
MAX_CONCURRENT_AGENTS=4

# Default timeout for agent execution (seconds)
DEFAULT_AGENT_TIMEOUT=60

# Enable/disable specific agents
ENABLE_HOTEL_SEARCH_AGENT=true
ENABLE_LOGIC_APP_AGENT=true  
ENABLE_FABRIC_ANALYST_AGENT=true
ENABLE_DATABRICKS_GENIE_AGENT=true

# ==================================================
# Performance and Monitoring
# ==================================================
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Cache TTL for agent responses (seconds)
AGENT_CACHE_TTL=3600

# ==================================================
# Security Settings
# ==================================================
# Session timeout (minutes)
SESSION_TIMEOUT_MINUTES=30

# Enable audit logging
ENABLE_AUDIT_LOGGING=true

# ==================================================
# Development/Testing Settings
# ==================================================
# Enable mock agents for development
ENABLE_MOCK_AGENTS=false

# Enable debug mode for detailed logging
DEBUG_MODE=false

# Testing environment flag
IS_TESTING_ENVIRONMENT=false